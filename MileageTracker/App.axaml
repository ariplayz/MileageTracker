<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MileageTracker"
             x:Class="MileageTracker.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"/>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground">#001f1f</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBackground">#002f2f</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryForeground">#E0E0E0</SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor">#00CCCC</SolidColorBrush>
        
        <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%,0%" EndPoint="100%,0%">
            <GradientStop Offset="0" Color="#004444"/>
            <GradientStop Offset="1" Color="#002f2f"/>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="PrimaryHoverBackground">#005555</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryHoverForeground">#FFFFFF</SolidColorBrush>
        
        <FontFamily x:Key="AkkoPro">/Assets/Fonts/Akko-Pro-Regular.ttf#Akko Pro</FontFamily>
        <FontFamily x:Key="AkkoProBold">/Assets/Fonts/Akko-Pro-Bold.ttf#Akko Pro</FontFamily>
    </Application.Resources>
</Application>